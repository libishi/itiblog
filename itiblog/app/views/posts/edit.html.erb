<%= form_for @post, url: post_path(@post.id) do |fh| %>
<%if @post.errors.any?%>
	<% @post.errors.full_messages.each do |msg|  %>
		<%= msg %>
	<% end%>	
<% end %>
<%= fh.label :title %> <%= fh.text_field :title %><br>
<%= fh.label :body  %> <%= fh.text_area :body %> <br>
<%= fh.submit %>
<% end %>

